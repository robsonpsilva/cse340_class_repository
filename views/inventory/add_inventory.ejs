<!-- Creating the content heading -->
 <% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>
<!-- The next code shows a message on the screen -->
 <%# messages() %>
<!-- Here we are showing the view main content -->
 <div class = "external">
  <div class="form-container">
    <form id="vehicleForm" name="vehicleForm" action = "/inventory/add_inventory" method = "post" class="login-form">
      <!-- Classification Dropdown -->
      <label for="classification_name" >Classification:</label>
      <%-list%>
      <!-- Make -->
      <label for="inv_make">Make:</label>
      <input type="text" id="inv_make" name="inv_make" required placeholder="Min of 3 characters" value="<%= locals.inv_make %>">

      <!-- Model -->
      <label for="inv_model">Model:</label>
      <input type="text" id="inv_model" name="inv_model" required placeholder="Min of 3 characters" value="<%= locals.inv_model %>">

      <!-- Description -->
      <label for="inv_description">Description:</label>
      <textarea id="inv_description" name="inv_description" rows="4" required placeholder="Enter the vehicle description" value="<%= locals.inv_description %>"></textarea>

      <!-- Image Path -->
      <label for="inv_image">Image Path:</label>
      <input type="text" id="inv_image" name="inv_image" required placeholder="/images/vehicles/no-image.png" value="<%= locals.inv_image %>">

      <!-- Thumbnail Path -->
      <label for="inv_thumbnail">Thumbnail Path:</label>
      <input type="text" id="inv_thumbnail" name="inv_thumbnail" required placeholder="/images/vehicles/no-image.png" value="<%= locals.inv_thumbnail %>">

      <!-- Price (Money format) -->
      <label for="inv_price">Price:</label>
      <input type="number" id="inv_price" name="inv_price" min="0" step="0.01" required placeholder="Decimal or integer" value="<%= locals.inv_price %>">

      <!-- Year -->
      <label for="inv_year">Year:</label>
      <input type="number" id="inv_year" name="inv_year" min="1900" max="2099" required placeholder="4-digit year" value="<%= locals.inv_year %>">

      <!-- Miles -->
      <label for="inv_miles">Miles:</label>
      <input type="number" id="inv_miles" name="inv_miles" min="0" required placeholder="Digits only" value="<%= locals.inv_miles %>">

      <!-- Color -->
      <label for="inv_color">Color:</label>
      <input type="text" id="inv_color" name="inv_color" required placeholder="Enter the vehicle color" value="<%= locals.inv_color %>">

      <!-- Submit Button -->
      <button type="submit">Submit</button>
    </form>
  </div>
</div>